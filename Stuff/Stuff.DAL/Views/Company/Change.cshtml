@using Stuff.DAL.Models
@model Company
@{
    ViewBag.Title = "Change";
}

<h2>Редактирование сотрудка №@Model.Id</h2>

@using (Html.BeginForm())
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Name, "Название")<br />
            @Html.EditorFor(m => m.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.Size, "Размер")<br />
            @Html.EditorFor(m => m.Size)
        </p>
        <p>
            @Html.LabelFor(m => m.Form, "Организационная форма")<br />
            @Html.EditorFor(m => m.Form)
        </p>
   
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}

